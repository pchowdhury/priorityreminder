<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_translucent_black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_main"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:layout_margin="50dp"
        android:background="@color/color_default_q1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lytTop"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/gradient_1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtProjectTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:padding="5dp"
                android:scrollHorizontally="true"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/floppy"
                android:visibility="visible" />
        </LinearLayout>


        <ScrollView
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/lytTotoView"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:padding="@dimen/item_general_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_task_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/hint_task_title" />

                    <TextView
                        android:id="@+id/txt_task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|start"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:text="@string/lbl_task_quadrant" />

                    <Spinner
                        android:id="@+id/spinner_quadrant_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_general_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|start"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:text="@string/lbl_task_desc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_top_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_task_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="top|left|start"
                            android:hint="@string/hint_task_desc"
                            android:minLines="4" />

                        <ImageView
                            android:id="@+id/img_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/blue_clock" />

                        <ImageView
                            android:id="@+id/img_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lyt_status_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_marginTop="@dimen/item_top_margin"
                            android:text="@string/lbl_task_starts_on" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/item_top_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/start_date_picker"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/reset_start_date"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:clickable="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/reset" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_marginTop="@dimen/item_top_margin"
                            android:text="@string/lbl_task_due_on" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/item_top_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/due_date_picker"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:clickable="true"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/reset_due_date"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:clickable="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/reset" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|start"
                            android:layout_marginTop="@dimen/item_top_margin"
                            android:text="@string/lbl_task_repeat_type" />

                        <Spinner
                            android:id="@+id/spinner_repeat_type"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/item_top_margin" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/lytBottom"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/gradient_1"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/undelete_trash" />

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/undelete" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/icon_list"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lyt_main"
        android:layout_alignEnd="@+id/lyt_main"
        android:layout_alignRight="@+id/lyt_main"
        android:layout_alignTop="@+id/lyt_main"
        android:layout_marginBottom="43dp"
        android:layout_marginTop="46dp"
        android:background="@color/colorPrimary"
        android:visibility="gone" />
</RelativeLayout>